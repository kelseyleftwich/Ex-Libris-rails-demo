<h1>Recently Added</h1>
<ul class="list-unstyled">
  <% @books.each do |b| %>
  <li class="media my-4">
    <img src="<%=b.thumbnail%>" class="mr-3" alt="...">
    <div class="media-body">
      <h5 class="mt-0 mb-1"><i><%= b.title %></i> <%= b.author %></h5>
      <div><small>Added <%= time_ago_in_words b.created_at %> ago</small></div>
      <%= b.description %>
      <div>
        <a href="<%= book_path(b) %>" class="badge badge-success">Read more</a>
      </div>
    </div>
  </li>
  <% end %>
</ul>