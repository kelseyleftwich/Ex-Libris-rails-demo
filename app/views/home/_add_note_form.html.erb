<div class="modal fade" id="addNoteModal" tabindex="-1" role="dialog" aria-labelledby="addNoteModalLabel" aria-hidden="true">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="addNoteModalLabel">Add Note</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <%= form_for :note, url: '/notes' do %>
      <input type="hidden" name="note[book_id]" value="<%= @book.id %>"/>
        <div class="modal-body">
          <div class="form-group row">
            <label for="inputPageNumber" class="col-sm-2 col-form-label">Page Number</label>
            <div class="col-sm-10">
              <input type="number" name="note[page_number]" class="form-control" id="inputPageNumber" placeholder="Page Number">
            </div>
          </div>

          <div class="form-group row">
              <label for="inputNoteBody" class="col-sm-2 col-form-label">Note</label>
              <div class="col-sm-10">
                <textarea name="note[body]" class="form-control" id="inputNoteBody" placeholder="Note"></textarea>
                
              </div>
            </div>
          
        </div>
        <div class="modal-footer">
          <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
          <button type="submit" class="btn btn-primary">Submit</button>
        </div>
      <% end %>
    </div>
  </div>
</div>